<% layout("layouts/boilerplate_index") %>

    <div class="container mt-5">
        <h1 class="text-center p-3">All Campgrounds</h1>
        <% for(let campground of campgrounds) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(campground.images.length) {%>
                            <img src="<%= campground.images[0].url %>" alt="" class="img-fluid">
                            <% } else { %>
                                <img src="https://res.cloudinary.com/djtkzefmk/image/upload/v1657739590/WeCamp/NO_Image_Available_f2ydw6.png"
                                    alt="" class="img-fluid">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.title %>
                            </h5>
                            <p class="card-text">
                                <%= campground.description %>
                            </p>
                            <p class="class-text">
                                <small class="text-muted">
                                    <%= campground.location %>
                                </small>
                            </p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View <%=
                                    campground.title %></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
                <script>
                    const campgrounds = { features: <%-JSON.stringify(campgrounds) %>};
                    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                </script>
                <script src="/javascripts/clusterMap.js"></script>
    </div>